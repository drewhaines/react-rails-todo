<p id="notice"><%= notice %></p>

<h1>Listing Customer Users</h1>

<table>
  <thead>
    <tr>
      <th>Customer</th>
      <th>User</th>
      <th>Role</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @customer_users.each do |customer_user| %>
      <tr>
        <td><%= customer_user.customer_id %></td>
        <td><%= customer_user.user_id %></td>
        <td><%= customer_user.role_id %></td>
        <td><%= link_to 'Show', customer_user %></td>
        <td><%= link_to 'Edit', edit_customer_user_path(customer_user) %></td>
        <td><%= link_to 'Destroy', customer_user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

